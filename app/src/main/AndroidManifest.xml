<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.popcorn.sharoom">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />  <!-- Read Permission -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- Write Permission -->



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name="me.yokeyword.imagepicker.ImagePickerActivity"/> <!-- Image load -->

        <activity
            android:name=".activity.Activity_intro"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.Activity_login"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.Activity_join"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.Activity_group"
            android:label="@string/title_activity_activity_group" />
        <activity
            android:name=".activity.Activity_calendar"
            android:label="@string/title_activity_activity_calendar" />
        <activity
            android:name=".activity.Activity_client"
            android:label="@string/title_activity_activity_client" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".activity.Fragment.Activity_group_view"
            android:theme="@android:style/Theme.Holo.NoActionBar">

        </activity>
        <activity
            android:name=".activity.Activity_myself"
            android:label="@string/title_activity_activity_myself"
            android:theme="@android:style/Theme.Holo.NoActionBar">
        </activity>

        <activity android:name=".activity.Activity_editRoom">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Activity_editRoom_roomPic"
            android:theme="@style/EditRoomPicTheme">

        </activity>

        <activity
            android:name=".activity.Activity_login2"
            android:theme="@android:style/Theme.Holo.NoActionBar">

        </activity>


    </application>

</manifest>
