<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.popcorn.sharoom.activity.Activity_finishJoin">

    <RelativeLayout
        android:id="@+id/reservationheader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/bangpoolColor"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/toptext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="회원가입"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reservationheader"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/iv_ok"
            android:layout_marginTop="100sp"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/finishreservation"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_finishjoin"
            android:layout_below="@id/iv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가완완료"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tv_wellcome"
            android:layout_below="@id/tv_finishjoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="환영합니다!"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/loginBtn"
            android:layout_below="@id/tv_wellcome"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:background="@drawable/loginbtn"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/bangpool"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
