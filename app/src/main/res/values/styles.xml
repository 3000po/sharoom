<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="EditRoomPicTheme" parent="AppBaseTheme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="tv_element">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/app_ci_1</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
    </style>


    <style name="tv_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_ci_1</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
    </style>

    <style name="tv_subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_ci_1</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
    </style>

    <style name="tv_menu">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_ci_1</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
    </style>

    <style name="tv_content">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_ci_1</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
    </style>

    <style name="tv_comment">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/app_ci_4</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
    </style>


    <!-- element_footer -->

    <style name="tv_element_footer_off">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_ci_4</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
    </style>

    <style name="tv_element_footer_on">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_ci_1</item>
        <item name="android:lineSpacingExtra">1.5dp</item>
    </style>

    <style name="heartRatingBar" parent="@android:style/Widget.RatingBar">
        <item name ="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/ic_action_mapview_g</item>
        <item name="android:minHeight">57dip</item>
        <item name="android:maxHeight">57dip</item>
        <item name="android:thumb">@null</item> 
    </style>


</resources>